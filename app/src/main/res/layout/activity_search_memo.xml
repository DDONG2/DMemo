<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_gray2">

        <LinearLayout
            android:id="@+id/rl_search_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:ems="10"
                android:gravity="top"
                android:hint="검색"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="25dp" />

            <CheckBox
                android:id="@+id/cb_edit_search_selected_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:layout_marginRight="12dp"
                android:button="@drawable/cb_edit_box"
                android:layout_gravity="center_vertical"
                android:text=" 전체"
                android:visibility="gone"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_search_memo_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/tv_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="데이터가없습니다."
                    android:visibility="gone"></TextView>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_search_select_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:visibility="gone"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_main_delete"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:text="삭제"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>